<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="track_terms.Views.AddTerm">
    <ContentPage.Content>
		<StackLayout>
			<StackLayout HorizontalOptions="Fill" VerticalOptions="StartAndExpand">
				<Label Text="Add Terms" FontSize="Small" TextColor="White" HorizontalOptions="Center" />
				<Label Text="Add A Term" HorizontalOptions="Center"/>
				<Entry x:Name="nameEntry" Placeholder="Term Name"/>
				<Label Text="Term Start"/>
				<DatePicker x:Name="startPicker" />
				<Label Text="Term End"/>
				<DatePicker x:Name="endPicker" />
				<Button x:Name="SaveTerm" Clicked="SaveTerm_Clicked" Text="Add Term" HorizontalOptions="Center"/>
			</StackLayout>


		</StackLayout>
    </ContentPage.Content>
</ContentPage>