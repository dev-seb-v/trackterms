<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="track_terms.Views.UpdateTerm">
    <ContentPage.Content>
		<StackLayout HorizontalOptions="CenterAndExpand" Margin="10">
			<Label Text="Term Name"/>
			<Entry x:Name="nameEntry"/>
			<Label Text="Term Start"/>
			<DatePicker x:Name="startDatePicker"/>
			<Label Text="Term End"/>
			<DatePicker x:Name="endDatePicker"/>
			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button x:Name="cancelButton" Text="Cancel"
						Clicked="cancelButton_Clicked"/>
				<Button x:Name="saveTermButton" Text="Save"
						Clicked="saveTermButton_Clicked"/>
			</StackLayout>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>