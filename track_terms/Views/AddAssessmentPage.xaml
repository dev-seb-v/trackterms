<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="track_terms.Views.AddAssessmentPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
			<Label Text="Type of Assessment"/>
			<Picker x:Name="TypePicker" Title="Select Type"
					/>
			
			<Label Text="Assessment Name"/>
			<Entry x:Name="nameEntry" Placeholder="Enter Name"/>

			<Label Text="Notes"/>
			<Entry x:Name="notesEntry" Placeholder="Enter Notes Here (optional)"/>
			<StackLayout Orientation="Horizontal" Margin="100, 10, 100, 10">
				<Button x:Name="cancelButton" Text="Cancel" Clicked="cancelButton_Clicked"/>
				<Button x:Name="AddAssessmentBtn" Text="Add" Clicked="AddAssessmentBtn_Clicked"/>
			</StackLayout>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>